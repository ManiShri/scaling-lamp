#include<stdio.h>
void main()
{
    int i,j ,n,x,y=0;
    int a[10];
    printf("enter the number of elements");
    scanf("%d",&n);
    printf("enter the elments in array");

    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
        printf("\n");
    }
    printf("enter the element to be searched");
    scanf("%d",&x);
    int mid,low,high;
    low=0;
    high=n-1;
    mid=(low+high)/2;
    while(low<=high)
    {
        if(a[mid]<x)
            low=mid+1;
        else if (a[mid]==x)
           {
            printf("element%d found at loaction%d",x,mid+1);
            break;
           }
        else

            high=mid-1;
            mid=(low+high)/2;


    }

}
